{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Web",
            "command": "dotnet",
            "type": "process",
            "group": "build",
            "args": [
                "build",
                "${workspaceFolder}/Web/Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Install ClientApp",
            "command": "npm",
            "type": "shell",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Web/ClientApp"
            },
            "args": [
                "install",
                "--save",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Watch ClientApp",
            "command": "npm",
            "type": "shell",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Web/ClientApp"
            },
            "args": [
                "start",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish Web",
            "command": "dotnet",
            "type": "process",
            "group": "build",
            "args": [
                "publish",
                "${workspaceFolder}/Web/Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}